{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/state",
            "dest": "/api/state.js"
        },
        {
            "src": "/api/agent",
            "dest": "/api/agent.js"
        },
        {
            "src": "/api/trending/(.*)",
            "dest": "/api/trending.js?chainId=$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "crons": [
        {
            "path": "/api/agent",
            "schedule": "0 0 * * *"
        }
    ]
}